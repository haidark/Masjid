<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/mainActivity">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:onClick="pickDate"
            android:text="@string/pick_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <Button
            android:onClick="setDateTodayCallback"
            android:text="@string/today_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:stretchColumns="0, 1">

        <!--- Header Row -->
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <TextView android:id="@+id/nextAlarm"
                android:layout_span="12"/>
        </TableRow>

        <!--- Header Row -->
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <TextView android:id="@+id/pickedDate"/>

            <TextView android:text="@string/jamaat"/>
        </TableRow>

        <!--- Fajr Row -->
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <CheckBox
                android:text="@string/fajr" />
            <TextView
                android:id="@+id/fajrTime" />

        </TableRow>

        <!--- Sunrise Row -->
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <CheckBox
                android:text="@string/sunrise" />
            <TextView
                android:id="@+id/sunriseTime" />

        </TableRow>

        <!--- Dhuhr Row -->
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <CheckBox
                android:text="@string/dhuhr" />
            <TextView
                android:id="@+id/dhuhrTime" />

        </TableRow>

        <!--- Asr Row -->
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <CheckBox
                android:text="@string/asr" />

            <TextView
                android:id="@+id/asrTime" />

        </TableRow>

        <!--- Maghrib Row -->
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <CheckBox
                android:text="@string/maghrib" />
            <TextView
                android:id="@+id/maghribTime"/>

        </TableRow>

        <!--- Isha Row -->
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <CheckBox
                android:text="@string/isha" />
            <TextView
                android:id="@+id/ishaTime" />

        </TableRow>

    </TableLayout>

</LinearLayout>
