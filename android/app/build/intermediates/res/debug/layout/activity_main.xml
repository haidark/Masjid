<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/mainActivity">

    <TableLayout
        android:id="@+id/timingsTable"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0, 1">

        <!--- Alarm Row -->
        <TableRow
            android:id="@+id/alarmRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <TextView android:id="@+id/nextAlarm"
                android:layout_span="12"/>
        </TableRow>

        <!--- Header Row -->
        <TableRow
            android:id="@+id/headerRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <Button android:id="@+id/pickDateButton"
                android:onClick="pickDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView  android:id="@+id/iqamahText"
                android:text="@string/jamaat_time"/>
        </TableRow>

        <!--- Fajr Row -->
        <TableRow
            android:id="@+id/fajrRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <CheckBox
                android:id="@+id/fajrCheck"
                android:text="@string/fajr" />
            <TextView
                android:id="@+id/fajrTime" />
        </TableRow>

        <!--- Sunrise Row -->
        <TableRow
            android:id="@+id/sunriseRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <CheckBox
                android:id="@+id/sunriseCheck"
                android:text="@string/sunrise" />
            <TextView
                android:id="@+id/sunriseTime" />
        </TableRow>

        <!--- Dhuhr Row -->
        <TableRow
            android:id="@+id/dhuhrRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <CheckBox
                android:id="@+id/dhuhrCheck"
                android:text="@string/dhuhr" />
            <TextView
                android:id="@+id/dhuhrTime" />
        </TableRow>

        <!--- Asr Row -->
        <TableRow
            android:id="@+id/asrRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <CheckBox
                android:id="@+id/asrCheck"
                android:text="@string/asr" />

            <TextView
                android:id="@+id/asrTime" />
        </TableRow>

        <!--- Maghrib Row -->
        <TableRow
            android:id="@+id/maghribRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <CheckBox
                android:id="@+id/maghribCheck"
                android:text="@string/maghrib" />
            <TextView
                android:id="@+id/maghribTime"/>
        </TableRow>

        <!--- Isha Row -->
        <TableRow
            android:id="@+id/ishaRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <CheckBox
                android:id="@+id/ishaCheck"
                android:text="@string/isha" />
            <TextView
                android:id="@+id/ishaTime" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/version"
        android:text="@string/version"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
